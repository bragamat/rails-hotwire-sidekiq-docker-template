<div id="<%= dom_id product %>">
  <p>
    <strong>Name:</strong>
    <%= product.name %>
  </p>

  <p>
    <strong>Stock:</strong>
    <%= product.stock %>
  </p>

  <div>
    <% product.variants.each do |variant| %>
      <p>
        <strong>Variant:</strong>
        <%= variant.name %>
      </p>
    <% end %>
  </div>

</div>
